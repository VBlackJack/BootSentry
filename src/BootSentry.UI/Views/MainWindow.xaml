<ui:FluentWindow x:Class="BootSentry.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:BootSentry.UI.ViewModels"
        xmlns:res="clr-namespace:BootSentry.UI.Resources"
        xmlns:controls="clr-namespace:BootSentry.UI.Controls"
        mc:Ignorable="d"
        Title="{res:Localize AppTitleFull}"
        Height="850" Width="1280"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        Background="Transparent"
        Foreground="{DynamicResource WindowForeground}">

    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FocusSearchCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ToggleExpertModeCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DisableSelectedCommand}"/>
        <KeyBinding Key="Delete" Modifiers="Ctrl" Command="{Binding DeleteSelectedCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl+Shift" Command="{Binding RestoreCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding SelectAllCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding ExportCommand}"/>
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding ShowHistoryCommand}"/>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding ClearSelectionCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="{res:Localize AppTitleFull}"
                     ShowMaximize="True"
                     ShowMinimize="True"
                     CanMaximize="True"
                     MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

        <!-- Menu Bar -->
        <Menu Grid.Row="1" Background="{DynamicResource PanelBackground}"
              AutomationProperties.Name="{res:Localize MenuMain}">
            <MenuItem Header="{res:Localize MenuFile}">
                <MenuItem Header="{res:Localize MenuExportJson}" Command="{Binding ExportJsonCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="{res:Localize MenuExportCsv}" Command="{Binding ExportCsvCommand}"/>
                <MenuItem Header="{res:Localize MenuExportDiagnostics}" Command="{Binding ExportDiagnosticsCommand}"/>
                <Separator/>
                <MenuItem Header="{res:Localize MenuSettings}" Command="{Binding OpenSettingsCommand}"/>
                <Separator/>
                <MenuItem Header="{res:Localize MenuExit}" Command="{Binding ExitCommand}" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="{res:Localize MenuView}">
                <MenuItem Header="{res:Localize MenuRefresh}" Command="{Binding RefreshCommand}" InputGestureText="F5"/>
                <Separator/>
                <MenuItem Header="{res:Localize MenuExpertMode}" IsCheckable="True" IsChecked="{Binding IsExpertMode}" InputGestureText="Ctrl+E"/>
                <Separator/>
                <MenuItem Header="{res:Localize MenuHistory}" Command="{Binding ShowHistoryCommand}" InputGestureText="Ctrl+H"/>
            </MenuItem>
            <MenuItem Header="{res:Localize MenuActions}">
                <MenuItem Header="{res:Localize ActionEnable}" Command="{Binding EnableSelectedCommand}"/>
                <MenuItem Header="{res:Localize ActionDisable}" Command="{Binding DisableSelectedCommand}" InputGestureText="Suppr"/>
                <MenuItem Header="{res:Localize ActionDelete}" Command="{Binding DeleteSelectedCommand}" InputGestureText="Ctrl+Suppr"/>
                <Separator/>
                <MenuItem Header="{res:Localize ActionUndo}" Command="{Binding UndoCommand}" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="{res:Localize ActionRestore}" Command="{Binding RestoreCommand}" InputGestureText="Ctrl+Maj+Z"/>
                <Separator/>
                <MenuItem Header="{res:Localize ActionOpenLocation}" Command="{Binding OpenFileLocationCommand}"/>
                <MenuItem Header="{res:Localize ActionCopyPath}" Command="{Binding CopyPathCommand}"/>
                <MenuItem Header="{res:Localize ActionCalculateHash}" Command="{Binding CalculateHashCommand}"/>
                <MenuItem Header="{res:Localize ActionScanAntivirus}" Command="{Binding ScanSelectedCommand}"/>
                <MenuItem Header="{res:Localize ActionScanAll}" Command="{Binding ScanAllCommand}"/>
                <MenuItem Header="{res:Localize ActionWebSearch}" Command="{Binding WebSearchCommand}"/>
                <Separator/>
                <MenuItem Header="{res:Localize ActionOpenRegedit}" Command="{Binding OpenInRegeditCommand}"/>
                <MenuItem Header="{res:Localize ActionOpenServices}" Command="{Binding OpenInServicesCommand}"/>
                <MenuItem Header="{res:Localize ActionOpenTaskScheduler}" Command="{Binding OpenInTaskSchedulerCommand}"/>
            </MenuItem>
            <MenuItem Header="{res:Localize MenuHelp}">
                <MenuItem Header="{res:Localize MenuDocumentation}" Command="{Binding ShowDocumentationCommand}" InputGestureText="F1"/>
                <Separator/>
                <MenuItem Header="{res:Localize MenuCheckUpdates}" Command="{Binding CheckUpdatesCommand}"/>
                <Separator/>
                <MenuItem Header="{res:Localize MenuAbout}" Command="{Binding ShowAboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="2" Background="{DynamicResource AccentBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/app.png" Width="32" Height="32" Margin="0,0,12,0"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <StackPanel>
                        <TextBlock Text="{res:Localize AppTitle}" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource AccentForeground}"/>
                        <TextBlock Text="{res:Localize AppSubtitle}" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Dashboard Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="32,0">
                    <Border Background="#1AFFFFFF" CornerRadius="4" Padding="16,8" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalEntriesCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource AccentForeground}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{res:Localize TotalEntries}" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1A10B981" CornerRadius="4" Padding="16,8" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="{Binding EnabledCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource SuccessBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{res:Localize EnabledEntries}" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1AEF4444" CornerRadius="4" Padding="16,8" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="{Binding DisabledCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource ErrorBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{res:Localize DisabledEntries}" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1AF59E0B" CornerRadius="4" Padding="16,8" Margin="4,0"
                            Visibility="{Binding HasSuspiciousEntries, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="{Binding SuspiciousCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource WarningBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{res:Localize SuspiciousEntries}" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ToggleButton IsChecked="{Binding IsExpertMode}"
                                  ToolTip="{res:Localize MenuExpertMode}"
                                  Padding="12,6" Margin="8,0"
                                  Background="Transparent" Foreground="{DynamicResource AccentForeground}"
                                  BorderBrush="{DynamicResource AccentForeground}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="{res:Localize Expert}"/>
                        </StackPanel>
                    </ToggleButton>
                    <Button ToolTip="{res:Localize MenuSettings}" Padding="10,6"
                            Background="Transparent" Foreground="{DynamicResource AccentForeground}"
                            BorderThickness="0" Cursor="Hand"
                            Command="{Binding OpenSettingsCommand}">
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="3" Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding RefreshCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource AccentBrush}"
                            ToolTip="{res:Localize TooltipRefresh}" MinHeight="36"
                            AutomationProperties.Name="{res:Localize TooltipRefresh}"
                            AutomationProperties.HelpText="F5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{res:Localize MenuRefresh}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding EnableSelectedCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource SuccessBrush}"
                            ToolTip="{res:Localize ActionEnable}" MinHeight="36"
                            AutomationProperties.Name="{res:Localize ActionEnable}"
                            AutomationProperties.HelpText="{res:Localize ActionEnableHelp}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{res:Localize ActionEnable}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding DisableSelectedCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource WarningBrush}"
                            ToolTip="{res:Localize TooltipDisable}" MinHeight="36"
                            AutomationProperties.Name="{res:Localize ActionDisable}"
                            AutomationProperties.HelpText="{res:Localize ActionDisableHelp}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE769;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{res:Localize ActionDisable}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <!-- Delete/Repair Button - Shows Repair for Winlogon entries -->
                    <Button Command="{Binding DeleteSelectedCommand}"
                            MinHeight="36"
                            Visibility="{Binding IsExpertMode, Converter={StaticResource BoolToVisibility}}"
                            AutomationProperties.Name="{res:Localize ActionDelete}"
                            AutomationProperties.HelpText="{res:Localize ActionDeleteHelp}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
                                <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                                <Setter Property="ToolTip" Value="{res:Localize TooltipDelete}"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="{res:Localize ActionDelete}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <!-- Show Repair for Winlogon entries -->
                                    <DataTrigger Binding="{Binding SelectedEntry.Type}" Value="Winlogon">
                                        <Setter Property="Background" Value="{DynamicResource InfoBrush}"/>
                                        <Setter Property="ToolTip" Value="{res:Localize TooltipRepairWinlogon}"/>
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE90F;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{res:Localize ActionRepair}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Separator Margin="8,4"/>
                    <Button Command="{Binding OpenFileLocationCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}"
                            ToolTip="{res:Localize ActionOpenLocation}" MinWidth="36" MinHeight="36"
                            AutomationProperties.Name="{res:Localize ActionOpenLocation}">
                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                    </Button>
                    <Button Command="{Binding CopyPathCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}"
                            ToolTip="{res:Localize ActionCopyPath}" MinWidth="36" MinHeight="36"
                            AutomationProperties.Name="{res:Localize ActionCopyPath}">
                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                    </Button>
                </StackPanel>

                <Border Grid.Column="1" Background="{DynamicResource ControlBackground}"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                        CornerRadius="4" Margin="16,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center"
                                    Visibility="{Binding SearchText, Converter={StaticResource NullToVisibility}}"
                                    IsHitTestVisible="False">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource DisabledForeground}" Margin="0,0,6,0"/>
                            <TextBlock Text="{res:Localize SearchPlaceholder}" Foreground="{DynamicResource DisabledForeground}"/>
                        </StackPanel>
                        <TextBox x:Name="SearchBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Padding="10,8" VerticalContentAlignment="Center"
                                 KeyDown="SearchBox_KeyDown"
                                 TabIndex="1"
                                 AutomationProperties.Name="{res:Localize SearchPlaceholder}"
                                 AutomationProperties.HelpText="Ctrl+F"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <ComboBox ItemsSource="{Binding StatusFilters}"
                              SelectedItem="{Binding SelectedStatusFilter}"
                              Width="120" Margin="0,0,8,0"
                              TabIndex="2"
                              AutomationProperties.Name="{res:Localize StatusFilterLabel}"
                              AutomationProperties.HelpText="{res:Localize StatusFilterHelp}"/>
                    <CheckBox Content="{res:Localize HideMicrosoftEntries}"
                              IsChecked="{Binding HideMicrosoftEntries}"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"
                              ToolTip="{res:Localize HideMicrosoftEntriesTooltip}"/>
                    <StackPanel Orientation="Horizontal" Margin="8,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding VisibleEntriesCount}" FontWeight="SemiBold"/>
                        <TextBlock Text=" / "/>
                        <TextBlock Text="{Binding TotalEntriesCount}"/>
                        <TextBlock Text=" "/>
                        <TextBlock Text="{res:Localize Entries}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1.2*" MinWidth="350" MaxWidth="600"/>
            </Grid.ColumnDefinitions>

            <!-- Entry List with Category Tabs -->
            <Border Grid.Column="0" Margin="12,12,4,12" Background="{DynamicResource PanelBackground}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation Tabs (Simplified by user intention) -->
                    <TabControl x:Name="CategoryTabs" Grid.Row="0"
                                SelectionChanged="CategoryTabs_SelectionChanged"
                                Background="Transparent" BorderThickness="0"
                                Padding="0" Margin="0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource WindowForeground}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="Border" Background="Transparent"
                                                    BorderThickness="0,0,0,2" BorderBrush="Transparent"
                                                    Padding="{TemplateBinding Padding}" Cursor="Hand">
                                                <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource RowHover}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>
                        <!-- Applications: Startup programs + Scheduled Tasks -->
                        <TabItem Tag="Applications">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE71D;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{res:Localize TabApplications}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ApplicationsCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <!-- Browsers: Extensions + BHOs -->
                        <TabItem Tag="Browsers">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{res:Localize TabBrowsers}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding BrowsersCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <!-- System: Services + Drivers + Print Monitors -->
                        <TabItem Tag="System">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE912;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{res:Localize TabSystem}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding SystemTabCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <!-- Advanced: Winlogon, AppInit, IFEO, etc. (Expert Mode only) -->
                        <TabItem Tag="Advanced" Visibility="{Binding IsExpertMode, Converter={StaticResource BoolToVisibility}}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{res:Localize TabAdvanced}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding AdvancedCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                    </TabControl>

                    <!-- Entry List Content -->
                    <Grid Grid.Row="1">
                        <!-- Skeleton Loader during initial load -->
                        <controls:SkeletonLoader RowCount="8"
                                                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                                                  Margin="8"/>

                        <!-- Empty State - Friendly message when list is empty -->
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding HasNoVisibleEntries, Converter={StaticResource BoolToVisibility}}"
                                Background="{DynamicResource PanelBackground}"
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                CornerRadius="8" Padding="40,32" Margin="20">
                            <StackPanel HorizontalAlignment="Center">
                                <!-- Success icon (checkmark in circle) -->
                                <Border Width="80" Height="80" CornerRadius="40"
                                        Background="{DynamicResource SuccessBrush}" Opacity="0.15"
                                        HorizontalAlignment="Center" Margin="0,0,0,16">
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="40"
                                               Foreground="{DynamicResource SuccessBrush}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{res:Localize EmptyStateAllClean}" FontSize="20" FontWeight="SemiBold"
                                           Foreground="{DynamicResource WindowForeground}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="{res:Localize EmptyStateAllCleanHint}" FontSize="13"
                                           Foreground="{DynamicResource MutedForeground}" HorizontalAlignment="Center"
                                           TextWrapping="Wrap" MaxWidth="300" TextAlignment="Center"/>
                                <!-- Microsoft filter hint -->
                                <TextBlock Text="{res:Localize EmptyStateMicrosoftHidden}" FontSize="11"
                                           Foreground="{DynamicResource DisabledForeground}" HorizontalAlignment="Center"
                                           Margin="0,8,0,0" FontStyle="Italic"
                                           Visibility="{Binding HideMicrosoftEntries, Converter={StaticResource BoolToVisibility}}"/>
                                <Button Content="{res:Localize ResetFilters}"
                                        Command="{Binding ResetFiltersCommand}"
                                        Visibility="{Binding CanResetFilters, Converter={StaticResource BoolToVisibility}}"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,20,0,0"
                                        HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <DataGrid x:Name="EntriesGrid"
                          ItemsSource="{Binding FilteredEntries}"
                          SelectedItem="{Binding SelectedEntry}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          SelectionChanged="EntriesGrid_SelectionChanged"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="True"
                          EnableRowVirtualization="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          Background="Transparent"
                          BorderThickness="0"
                          RowHeight="36"
                          RowBackground="{DynamicResource PanelBackground}"
                          AlternatingRowBackground="{DynamicResource RowAlternate}"
                          TabIndex="3"
                          AutomationProperties.Name="{res:Localize DataGridHelp}"
                          AutomationProperties.HelpText="{res:Localize DataGridHelp}">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{res:Localize ActionEnable}" Command="{Binding EnableSelectedCommand}"/>
                            <MenuItem Header="{res:Localize ActionDisable}" Command="{Binding DisableSelectedCommand}"/>
                            <MenuItem Header="{res:Localize ActionDelete}" Command="{Binding DeleteSelectedCommand}"/>
                            <Separator/>
                            <MenuItem Header="{res:Localize ActionEnableSelection}" Command="{Binding EnableBatchCommand}"
                                      Visibility="{Binding HasMultipleSelection, Converter={StaticResource BoolToVisibility}}"/>
                            <MenuItem Header="{res:Localize ActionDisableSelection}" Command="{Binding DisableBatchCommand}"
                                      Visibility="{Binding HasMultipleSelection, Converter={StaticResource BoolToVisibility}}"/>
                            <Separator Visibility="{Binding HasMultipleSelection, Converter={StaticResource BoolToVisibility}}"/>
                            <MenuItem Header="{res:Localize ActionOpenLocation}" Command="{Binding OpenFileLocationCommand}"/>
                            <MenuItem Header="{res:Localize ActionCopyPath}" Command="{Binding CopyPathCommand}"/>
                            <MenuItem Header="{res:Localize ActionCalculateHash}" Command="{Binding CalculateHashCommand}"/>
                            <MenuItem Header="{res:Localize ActionScanAntivirus}" Command="{Binding ScanSelectedCommand}"/>
                            <MenuItem Header="{res:Localize ActionWebSearch}" Command="{Binding WebSearchCommand}"/>
                            <Separator/>
                            <MenuItem Header="{res:Localize ActionOpenRegedit}" Command="{Binding OpenInRegeditCommand}"/>
                            <MenuItem Header="{res:Localize ActionOpenServices}" Command="{Binding OpenInServicesCommand}"/>
                            <MenuItem Header="{res:Localize ActionOpenTaskScheduler}" Command="{Binding OpenInTaskSchedulerCommand}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="MinHeight" Value="36"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource RowHover}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource RowSelected}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource PanelBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource WindowForeground}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right" Width="4"
                                                   Cursor="SizeWE" Background="Transparent"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource RowHover}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border x:Name="CellBorder"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="CellBorder" Property="Background" Value="{DynamicResource RowSelected}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{res:Localize ColumnName}" Binding="{Binding DisplayName}" Width="*" MinWidth="150"/>
                        <DataGridTextColumn Header="{res:Localize ColumnType}" Binding="{Binding Type}" Width="110"/>
                        <DataGridTextColumn Header="{res:Localize ColumnScope}" Binding="{Binding Scope}" Width="80"/>
                        <DataGridTextColumn Header="{res:Localize ColumnPublisher}" Binding="{Binding Publisher}" Width="150" MinWidth="100"/>
                        <DataGridTemplateColumn Header="{res:Localize ColumnSignature}" Width="90" MinWidth="80"
                                            SortMemberPath="SignatureStatus" CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding SignatureStatus, Converter={StaticResource SignatureToColor}}"
                                            CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding SignatureStatus}" FontSize="11" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="{res:Localize ColumnStatus}" Width="80" MinWidth="70"
                                            SortMemberPath="Status" CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Status, Converter={StaticResource StatusToColor}}"
                                            CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Status}" FontSize="11" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="{res:Localize ColumnRisk}" Width="80"
                                            SortMemberPath="RiskLevel" CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Width="28" Height="28"
                                            Background="{Binding RiskLevel, Converter={StaticResource RiskToColor}}"
                                            ToolTip="{Binding RiskLevel}"
                                            VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="&#xE9CE;"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Safe">
                                                            <Setter Property="Text" Value="&#xE73E;"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Unknown">
                                                            <Setter Property="Text" Value="&#xE9CE;"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Suspicious">
                                                            <Setter Property="Text" Value="&#xE7BA;"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Critical">
                                                            <Setter Property="Text" Value="&#xE783;"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" Cursor="SizeWE"
                          ToolTip="{res:Localize SplitterTooltip}"
                          AutomationProperties.Name="{res:Localize SplitterTooltip}">
                <GridSplitter.Style>
                    <Style TargetType="GridSplitter">
                        <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                        <Setter Property="Opacity" Value="0.5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Opacity" Value="0.8"/>
                                <Setter Property="Cursor" Value="SizeWE"/>
                            </Trigger>
                            <!-- During drag (when focused) -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Opacity" Value="1.0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </GridSplitter.Style>
            </GridSplitter>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="{DynamicResource PanelBackground}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="4" Margin="4,12,12,12">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="{res:Localize DetailTitle}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <!-- No Selection -->
                        <StackPanel Visibility="{Binding SelectedEntry, Converter={StaticResource NullToVisibility}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="56" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}" Opacity="0.4"/>
                            <TextBlock Text="{res:Localize SelectEntryHint}" FontSize="15" FontWeight="SemiBold"
                                       Foreground="{DynamicResource WindowForeground}" HorizontalAlignment="Center" Margin="0,20,0,8"/>
                            <TextBlock Text="{res:Localize SelectEntryHintLarge}" FontSize="12"
                                       Foreground="{DynamicResource MutedForeground}" HorizontalAlignment="Center" TextWrapping="Wrap"
                                       TextAlignment="Center" MaxWidth="250"/>
                        </StackPanel>

                        <!-- Entry Details -->
                        <StackPanel Visibility="{Binding SelectedEntry, Converter={StaticResource NotNullToVisibility}}">
                            <!-- Header with status badge -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding SelectedEntry.DisplayName}"
                                           FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                <Border Grid.Column="1"
                                        Background="{Binding SelectedEntry.RiskLevel, Converter={StaticResource RiskToColor}}"
                                        CornerRadius="4" Padding="8,4" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding SelectedEntry.RiskLevel}"
                                               FontSize="11" Foreground="White"/>
                                </Border>
                            </Grid>

                            <!-- Description (for extensions) -->
                            <TextBlock Text="{Binding SelectedEntry.Description}" TextWrapping="Wrap"
                                       Foreground="{DynamicResource MutedForeground}" Margin="0,0,0,12"
                                       Visibility="{Binding SelectedEntry.Description, Converter={StaticResource NotNullToVisibility}}"/>

                            <Separator Margin="0,0,0,12"/>

                            <!-- Info Grid -->
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{res:Localize DetailType}" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEntry.Type}" Margin="0,4" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="1" Text="{res:Localize DetailScope}" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEntry.Scope}" Margin="0,4"/>

                                <TextBlock Grid.Row="2" Text="{res:Localize DetailSource}" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedEntry.SourcePath}"
                                           Margin="0,4" TextWrapping="Wrap" FontSize="11"/>

                                <TextBlock Grid.Row="3" Text="{res:Localize DetailTarget}" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedEntry.TargetPath}"
                                           Margin="0,4" TextWrapping="Wrap" FontSize="11"/>

                                <TextBlock Grid.Row="4" Text="{res:Localize DetailPublisher}" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedEntry.Publisher}" Margin="0,4" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="5" Text="{res:Localize DetailSignature}" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedEntry.SignatureStatus}" Margin="0,4"/>

                                <TextBlock Grid.Row="6" Text="{res:Localize DetailStatus}" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SelectedEntry.Status}" Margin="0,4"/>

                                <TextBlock Grid.Row="7" Text="{res:Localize DetailScanAV}" FontWeight="SemiBold" Margin="0,4"
                                           Visibility="{Binding SelectedEntry.MalwareScanResult, Converter={StaticResource NotNullToVisibility}}"/>
                                <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Margin="0,4"
                                            Visibility="{Binding SelectedEntry.MalwareScanResult, Converter={StaticResource NotNullToVisibility}}">
                                    <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#6B7280"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Clean">
                                                        <Setter Property="Background" Value="#10B981"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Malware">
                                                        <Setter Property="Background" Value="#EF4444"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Blocked">
                                                        <Setter Property="Background" Value="#F59E0B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="NotScanned">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="TooLarge">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Error">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="NoAntivirusProvider">
                                                        <Setter Property="Background" Value="#F59E0B"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding SelectedEntry.MalwareScanResult, Converter={StaticResource ScanResultToString}}"
                                                   Foreground="White" FontSize="11"/>
                                    </Border>
                                    <TextBlock Text="{Binding SelectedEntry.LastMalwareScan, StringFormat=' ({0:g})'}"
                                               FontSize="10" Foreground="{DynamicResource DisabledForeground}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Separator Margin="0,12"/>

                            <!-- Command Line -->
                            <TextBlock Text="{res:Localize DetailCommandLine}" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="{DynamicResource RowAlternate}" CornerRadius="4" Padding="8">
                                <TextBox Text="{Binding SelectedEntry.CommandLineRaw, Mode=OneWay}"
                                         IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                         Background="Transparent" BorderThickness="0"
                                         FontFamily="Consolas"/>
                            </Border>

                            <!-- Notes -->
                            <StackPanel Visibility="{Binding SelectedEntry.Notes, Converter={StaticResource NotNullToVisibility}}"
                                        Margin="0,12,0,0">
                                <TextBlock Text="{res:Localize DetailNotes}" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <Border Background="{DynamicResource NoteBackgroundBrush}" CornerRadius="4" Padding="8">
                                    <TextBlock Text="{Binding SelectedEntry.Notes}" TextWrapping="Wrap"
                                               Foreground="{DynamicResource NoteForegroundBrush}"/>
                                </Border>
                            </StackPanel>

                            <!-- Knowledge Base Info -->
                            <StackPanel Visibility="{Binding KnowledgeInfo, Converter={StaticResource NotNullToVisibility}}"
                                        Margin="0,16,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="&#xE82D;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                               Foreground="{DynamicResource AccentBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{res:Localize KnowledgeInfo}" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{DynamicResource AccentBrush}"/>
                                </StackPanel>

                                <!-- Safety Level Badge -->
                                <Border CornerRadius="4" Padding="8" Margin="0,0,0,8"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{res:Localize KnowledgeSafetyLevel}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                            <Border CornerRadius="3" Padding="8,2" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Critical">
                                                                <Setter Property="Background" Value="#DC2626"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Important">
                                                                <Setter Property="Background" Value="#F59E0B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Safe">
                                                                <Setter Property="Background" Value="#10B981"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="RecommendedDisable">
                                                                <Setter Property="Background" Value="#3B82F6"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="ShouldRemove">
                                                                <Setter Property="Background" Value="#7C3AED"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding KnowledgeInfo.SafetyLevel, Converter={StaticResource SafetyLevelToString}}"
                                                       Foreground="White" FontSize="11"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding KnowledgeInfo.Category}" FontSize="11"
                                                   Foreground="{DynamicResource DisabledForeground}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Description -->
                                <TextBlock Text="{Binding KnowledgeInfo.ShortDescription}" TextWrapping="Wrap"
                                           Margin="0,0,0,8"/>

                                <!-- Full Description (Expander) -->
                                <Expander Header="{res:Localize KnowledgeFullDesc}" IsExpanded="False" Margin="0,0,0,8"
                                          Visibility="{Binding KnowledgeInfo.FullDescription, Converter={StaticResource NotNullToVisibility}}">
                                    <TextBlock Text="{Binding KnowledgeInfo.FullDescription}" TextWrapping="Wrap"
                                               Margin="0,8,0,0" Foreground="{DynamicResource WindowForeground}"/>
                                </Expander>

                                <!-- Impact if disabled -->
                                <Expander Header="{res:Localize KnowledgeDisableImpact}" IsExpanded="False" Margin="0,0,0,8"
                                          Visibility="{Binding KnowledgeInfo.DisableImpact, Converter={StaticResource NotNullToVisibility}}">
                                    <Border Background="{DynamicResource NoteBackgroundBrush}" CornerRadius="4" Padding="8" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding KnowledgeInfo.DisableImpact}" TextWrapping="Wrap"
                                                   Foreground="{DynamicResource NoteForegroundBrush}"/>
                                    </Border>
                                </Expander>

                                <!-- Performance Impact -->
                                <Expander Header="{res:Localize KnowledgePerfImpact}" IsExpanded="False" Margin="0,0,0,8"
                                          Visibility="{Binding KnowledgeInfo.PerformanceImpact, Converter={StaticResource NotNullToVisibility}}">
                                    <TextBlock Text="{Binding KnowledgeInfo.PerformanceImpact}" TextWrapping="Wrap"
                                               Margin="0,8,0,0" Foreground="{DynamicResource WindowForeground}"/>
                                </Expander>

                                <!-- Recommendation -->
                                <Border Background="{DynamicResource AccentBrush}" CornerRadius="4" Padding="8" Margin="0,4,0,0"
                                        Opacity="0.9"
                                        Visibility="{Binding KnowledgeInfo.Recommendation, Converter={StaticResource NotNullToVisibility}}">
                                    <StackPanel>
                                        <TextBlock Text="{res:Localize KnowledgeRecommendation}" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding KnowledgeInfo.Recommendation}" TextWrapping="Wrap" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- No Knowledge Info -->
                            <Border Visibility="{Binding KnowledgeInfo, Converter={StaticResource NullToVisibility}}"
                                    Background="{DynamicResource RowAlternate}" CornerRadius="4" Padding="12" Margin="0,16,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                               HorizontalAlignment="Center" Opacity="0.5" Margin="0,0,0,8"/>
                                    <TextBlock Text="{res:Localize NoKnowledgeInfo}" TextWrapping="Wrap"
                                               HorizontalAlignment="Center" Foreground="{DynamicResource DisabledForeground}"/>
                                    <TextBlock Text="{res:Localize NoKnowledgeInfoSub}" TextWrapping="Wrap" FontSize="11"
                                               HorizontalAlignment="Center" Foreground="{DynamicResource DisabledForeground}"/>
                                </StackPanel>
                            </Border>

                            <!-- File Info -->
                            <Expander Header="{res:Localize DetailFileInfo}" Margin="0,12,0,0" IsExpanded="False">
                                <StackPanel Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{res:Localize DetailFileVersion}" Margin="0,2"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEntry.FileVersion}" Margin="0,2"/>

                                        <TextBlock Grid.Row="1" Text="{res:Localize DetailProductName}" Margin="0,2"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEntry.ProductName}" Margin="0,2"/>

                                        <TextBlock Grid.Row="2" Text="{res:Localize DetailFileSize}" Margin="0,2"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedEntry.FileSize, StringFormat={}{0:N0} bytes}" Margin="0,2"/>

                                        <TextBlock Grid.Row="3" Text="{res:Localize DetailLastModified}" Margin="0,2"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedEntry.LastModified, StringFormat=g}" Margin="0,2"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>

                            <Separator Margin="0,16"/>

                            <!-- Action Buttons -->
                            <WrapPanel HorizontalAlignment="Center">
                                <Button Command="{Binding OpenFileLocationCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}" Margin="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="{res:Localize BtnOpen}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding CopyPathCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}" Margin="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="{res:Localize BtnCopy}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding WebSearchCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}" Margin="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="{res:Localize BtnWeb}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding CalculateHashCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource InfoBrush}" Margin="4"
                                        ToolTip="{res:Localize ActionCalculateHash}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="{res:Localize BtnHash}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ScanSelectedCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource SuccessBrush}" Margin="4"
                                        ToolTip="{res:Localize ActionScanAntivirus}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="{res:Localize BtnScanAV}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="5" Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Admin status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAdmin}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding AdminStatusText}" FontSize="11" Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Status message -->
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" VerticalAlignment="Center"
                           AutomationProperties.LiveSetting="Polite"
                           AutomationProperties.Name="Message de statut"/>

                <!-- Loading indicator -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="&#xE712;" FontFamily="Segoe MDL2 Assets" Margin="0,0,4,0" Foreground="{DynamicResource DisabledForeground}"/>
                    <TextBlock Text="{res:Localize Loading}" Foreground="{DynamicResource DisabledForeground}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toast Container -->
        <Grid x:Name="ToastContainer" Grid.RowSpan="6" VerticalAlignment="Top" Margin="0,80,0,0"
              Panel.ZIndex="1000" IsHitTestVisible="False"/>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="6" Background="{DynamicResource OverlayBackground}"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                Panel.ZIndex="999">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource AccentForeground}"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                <TextBlock Text="{Binding ProgressText}" Foreground="{DynamicResource HeaderSecondaryForeground}" FontSize="12"
                           HorizontalAlignment="Center" Margin="0,8,0,0"
                           Visibility="{Binding ProgressText, Converter={StaticResource NotNullToVisibility}}"/>
                <Button Command="{Binding CancelOperationCommand}"
                        Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibility}}"
                        Margin="0,16,0,0" Padding="16,8"
                        Background="{DynamicResource ErrorBrush}" Foreground="{DynamicResource AccentForeground}" BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{res:Localize Cancel}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Scanning Overlay -->
        <Border Grid.RowSpan="6" Background="{DynamicResource OverlayBackground}"
                Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsScanning}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="350">
                <TextBlock Text="&#xE8FE;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                           HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,16"/>
                <TextBlock Text="{res:Localize ScanInProgress}" FontSize="18" FontWeight="SemiBold"
                           Foreground="{DynamicResource WindowForeground}"
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <!-- ProgressBar with percentage overlay -->
                <Grid Width="300" Margin="0,0,0,8">
                    <ProgressBar Value="{Binding ScanProgress}" Maximum="{Binding ScanTotal}"
                                 Height="20"/>
                    <TextBlock Text="{Binding ScanPercentage, StringFormat={}{0}%}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontWeight="SemiBold" FontSize="11" Foreground="White"/>
                </Grid>
                <TextBlock Text="{Binding ScanProgressText}" Foreground="{DynamicResource DisabledForeground}"
                           HorizontalAlignment="Center" FontSize="12" Margin="0,0,0,16"
                           TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                <Button Command="{Binding CancelScanCommand}"
                        Padding="16,8"
                        Background="{DynamicResource ErrorBrush}" Foreground="{DynamicResource AccentForeground}" BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{res:Localize CancelScan}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
