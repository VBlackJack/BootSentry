<Window x:Class="BootSentry.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BootSentry.UI.ViewModels"
        mc:Ignorable="d"
        Title="BootSentry - Gestionnaire de démarrage Windows"
        Height="750" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource WindowForeground}">

    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FocusSearchCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ToggleExpertModeCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DisableSelectedCommand}"/>
        <KeyBinding Key="Delete" Modifiers="Ctrl" Command="{Binding DeleteSelectedCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl+Shift" Command="{Binding RestoreCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding SelectAllCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding ExportCommand}"/>
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding ShowHistoryCommand}"/>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding ClearSelectionCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource PanelBackground}"
              AutomationProperties.Name="Menu principal">
            <MenuItem Header="_Fichier" AutomationProperties.Name="Menu Fichier">
                <MenuItem Header="_Exporter en JSON..." Command="{Binding ExportJsonCommand}" InputGestureText="Ctrl+S"
                          AutomationProperties.Name="Exporter en JSON"/>
                <MenuItem Header="Exporter en _CSV..." Command="{Binding ExportCsvCommand}"
                          AutomationProperties.Name="Exporter en CSV"/>
                <MenuItem Header="Exporter _diagnostics (ZIP)..." Command="{Binding ExportDiagnosticsCommand}"
                          AutomationProperties.Name="Exporter diagnostics"/>
                <Separator/>
                <MenuItem Header="_Paramètres..." Command="{Binding OpenSettingsCommand}"
                          AutomationProperties.Name="Paramètres"/>
                <Separator/>
                <MenuItem Header="_Quitter" Command="{Binding ExitCommand}" InputGestureText="Alt+F4"
                          AutomationProperties.Name="Quitter l'application"/>
            </MenuItem>
            <MenuItem Header="_Affichage" AutomationProperties.Name="Menu Affichage">
                <MenuItem Header="_Actualiser" Command="{Binding RefreshCommand}" InputGestureText="F5"
                          AutomationProperties.Name="Actualiser la liste"/>
                <Separator/>
                <MenuItem Header="Mode _Expert" IsCheckable="True" IsChecked="{Binding IsExpertMode}" InputGestureText="Ctrl+E"
                          AutomationProperties.Name="Basculer mode expert"/>
                <Separator/>
                <MenuItem Header="_Historique" Command="{Binding ShowHistoryCommand}" InputGestureText="Ctrl+H"
                          AutomationProperties.Name="Afficher l'historique"/>
            </MenuItem>
            <MenuItem Header="_Actions" AutomationProperties.Name="Menu Actions">
                <MenuItem Header="_Activer" Command="{Binding EnableSelectedCommand}"
                          AutomationProperties.Name="Activer l'entrée"/>
                <MenuItem Header="_Désactiver" Command="{Binding DisableSelectedCommand}" InputGestureText="Suppr"
                          AutomationProperties.Name="Désactiver l'entrée"/>
                <MenuItem Header="_Supprimer" Command="{Binding DeleteSelectedCommand}" InputGestureText="Ctrl+Suppr"
                          AutomationProperties.Name="Supprimer l'entrée"/>
                <Separator/>
                <MenuItem Header="A_nnuler" Command="{Binding UndoCommand}" InputGestureText="Ctrl+Z"
                          AutomationProperties.Name="Annuler la dernière action"/>
                <MenuItem Header="_Restaurer" Command="{Binding RestoreCommand}" InputGestureText="Ctrl+Maj+Z"
                          AutomationProperties.Name="Restaurer depuis l'historique"/>
                <Separator/>
                <MenuItem Header="_Ouvrir l'emplacement" Command="{Binding OpenFileLocationCommand}"
                          AutomationProperties.Name="Ouvrir l'emplacement du fichier"/>
                <MenuItem Header="_Copier le chemin" Command="{Binding CopyPathCommand}"
                          AutomationProperties.Name="Copier le chemin"/>
                <MenuItem Header="Calculer le _hash" Command="{Binding CalculateHashCommand}"
                          AutomationProperties.Name="Calculer le hash SHA-256"/>
                <MenuItem Header="_Scanner avec l'antivirus" Command="{Binding ScanSelectedCommand}"
                          AutomationProperties.Name="Scanner le fichier avec l'antivirus"/>
                <MenuItem Header="Rechercher sur le _Web" Command="{Binding WebSearchCommand}"
                          AutomationProperties.Name="Rechercher sur le web"/>
                <Separator/>
                <MenuItem Header="Ouvrir dans _Regedit" Command="{Binding OpenInRegeditCommand}"
                          AutomationProperties.Name="Ouvrir dans l'éditeur de registre"/>
                <MenuItem Header="Ouvrir _Services.msc" Command="{Binding OpenInServicesCommand}"
                          AutomationProperties.Name="Ouvrir la console Services"/>
                <MenuItem Header="Ouvrir _Planificateur de tâches" Command="{Binding OpenInTaskSchedulerCommand}"
                          AutomationProperties.Name="Ouvrir le planificateur de tâches"/>
            </MenuItem>
            <MenuItem Header="_Aide" AutomationProperties.Name="Menu Aide">
                <MenuItem Header="_Documentation" Command="{Binding ShowDocumentationCommand}" InputGestureText="F1"
                          AutomationProperties.Name="Ouvrir la documentation"/>
                <Separator/>
                <MenuItem Header="Vérifier les _mises à jour" Command="{Binding CheckUpdatesCommand}"
                          AutomationProperties.Name="Vérifier les mises à jour"/>
                <Separator/>
                <MenuItem Header="À _propos de BootSentry" Command="{Binding ShowAboutCommand}"
                          AutomationProperties.Name="À propos de BootSentry"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="1" Background="{DynamicResource AccentBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/app.png" Width="32" Height="32" Margin="0,0,12,0"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <StackPanel>
                        <TextBlock Text="BootSentry" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource AccentForeground}"/>
                        <TextBlock Text="Gestionnaire de démarrage Windows" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Dashboard Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="32,0">
                    <Border Background="#1AFFFFFF" CornerRadius="4" Padding="16,8" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalEntriesCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource AccentForeground}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1A10B981" CornerRadius="4" Padding="16,8" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="{Binding EnabledCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource SuccessBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Actives" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1AEF4444" CornerRadius="4" Padding="16,8" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="{Binding DisabledCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource ErrorBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Désactivées" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1AF59E0B" CornerRadius="4" Padding="16,8" Margin="4,0"
                            Visibility="{Binding HasSuspiciousEntries, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="{Binding SuspiciousCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource WarningBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Suspectes" FontSize="11" Foreground="{DynamicResource HeaderSecondaryForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ToggleButton IsChecked="{Binding IsExpertMode}"
                                  ToolTip="Mode Expert (Ctrl+E)"
                                  Padding="12,6" Margin="8,0"
                                  Background="Transparent" Foreground="{DynamicResource AccentForeground}"
                                  BorderBrush="{DynamicResource AccentForeground}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Expert"/>
                        </StackPanel>
                    </ToggleButton>
                    <Button ToolTip="Paramètres" Padding="10,6"
                            Background="Transparent" Foreground="{DynamicResource AccentForeground}"
                            BorderThickness="0" Cursor="Hand"
                            Command="{Binding OpenSettingsCommand}">
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="2" Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding RefreshCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource AccentBrush}" ToolTip="Actualiser (F5)"
                            AutomationProperties.Name="Actualiser la liste"
                            AutomationProperties.HelpText="Relance l'analyse de toutes les entrées de démarrage">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Actualiser" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding EnableSelectedCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource SuccessBrush}"
                            AutomationProperties.Name="Activer l'entrée sélectionnée"
                            AutomationProperties.HelpText="Réactive l'entrée de démarrage sélectionnée">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Activer" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding DisableSelectedCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource WarningBrush}"
                            AutomationProperties.Name="Désactiver l'entrée sélectionnée"
                            AutomationProperties.HelpText="Désactive l'entrée de démarrage sélectionnée">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE769;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Désactiver" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding DeleteSelectedCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource ErrorBrush}"
                            Visibility="{Binding IsExpertMode, Converter={StaticResource BoolToVisibility}}"
                            AutomationProperties.Name="Supprimer l'entrée sélectionnée"
                            AutomationProperties.HelpText="Supprime définitivement l'entrée (un backup sera créé)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Supprimer" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Separator Margin="8,4"/>
                    <Button Command="{Binding OpenFileLocationCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}"
                            ToolTip="Ouvrir l'emplacement"
                            AutomationProperties.Name="Ouvrir l'emplacement du fichier"
                            AutomationProperties.HelpText="Ouvre l'explorateur Windows à l'emplacement du fichier">
                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets"/>
                    </Button>
                    <Button Command="{Binding CopyPathCommand}"
                            Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}"
                            ToolTip="Copier le chemin"
                            AutomationProperties.Name="Copier le chemin"
                            AutomationProperties.HelpText="Copie le chemin du fichier dans le presse-papiers">
                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
                    </Button>
                </StackPanel>

                <Border Grid.Column="1" Background="{DynamicResource ControlBackground}"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                        CornerRadius="4" Margin="16,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center"
                                    Visibility="{Binding SearchText, Converter={StaticResource NullToVisibility}}"
                                    IsHitTestVisible="False">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource DisabledForeground}" Margin="0,0,6,0"/>
                            <TextBlock Text="Rechercher... (Ctrl+F)" Foreground="{DynamicResource DisabledForeground}"/>
                        </StackPanel>
                        <TextBox x:Name="SearchBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Padding="10,8" VerticalContentAlignment="Center"
                                 AutomationProperties.Name="Rechercher des entrées"
                                 AutomationProperties.HelpText="Filtrez les entrées par nom, éditeur ou chemin"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <ComboBox ItemsSource="{Binding StatusFilters}"
                              SelectedItem="{Binding SelectedStatusFilter}"
                              Width="120" Margin="0,0,8,0"
                              AutomationProperties.Name="Filtrer par statut"
                              AutomationProperties.HelpText="Sélectionnez un statut pour filtrer la liste"/>
                    <TextBlock Margin="8,0" VerticalAlignment="Center">
                        <Run Text="{Binding VisibleEntriesCount, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding TotalEntriesCount, Mode=OneWay}"/>
                        <Run Text=" entrées"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Entry List with Category Tabs -->
            <Border Grid.Column="0" Margin="8" Background="{DynamicResource PanelBackground}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Category Tabs -->
                    <TabControl x:Name="CategoryTabs" Grid.Row="0"
                                SelectionChanged="CategoryTabs_SelectionChanged"
                                Background="Transparent" BorderThickness="0"
                                Padding="0" Margin="0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource WindowForeground}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="Border" Background="Transparent"
                                                    BorderThickness="0,0,0,2" BorderBrush="Transparent"
                                                    Padding="{TemplateBinding Padding}" Cursor="Hand">
                                                <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource RowHover}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>
                        <TabItem Tag="Startup">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Démarrage" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StartupCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem Tag="Tasks">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Tâches" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TasksCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem Tag="Services">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE912;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Services" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ServicesCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem Tag="System" Visibility="{Binding IsExpertMode, Converter={StaticResource BoolToVisibility}}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE770;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Système" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding SystemCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        <TabItem Tag="Extensions" Visibility="{Binding IsExpertMode, Converter={StaticResource BoolToVisibility}}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74C;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Extensions" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ExtensionsCount, StringFormat=' ({0})'}"
                                               VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                    </TabControl>

                    <!-- Entry List Content -->
                    <Grid Grid.Row="1">
                        <!-- No Results Message -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Visibility="{Binding HasNoVisibleEntries, Converter={StaticResource BoolToVisibility}}"
                                    Margin="0,40">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="Aucun résultat trouvé" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource DisabledForeground}" HorizontalAlignment="Center" Margin="0,16,0,8"/>
                            <TextBlock Text="Modifiez vos critères de recherche ou de filtrage"
                                       Foreground="{DynamicResource DisabledForeground}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <DataGrid x:Name="EntriesGrid"
                          ItemsSource="{Binding FilteredEntries}"
                          SelectedItem="{Binding SelectedEntry}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          SelectionChanged="EntriesGrid_SelectionChanged"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          CanUserReorderColumns="True"
                          EnableRowVirtualization="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="{DynamicResource PanelBackground}"
                          AlternatingRowBackground="{DynamicResource RowAlternate}"
                          AutomationProperties.Name="Liste des entrées de démarrage"
                          AutomationProperties.HelpText="Utilisez les flèches pour naviguer, Entrée pour sélectionner">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Activer" Command="{Binding EnableSelectedCommand}"/>
                            <MenuItem Header="Désactiver" Command="{Binding DisableSelectedCommand}"/>
                            <MenuItem Header="Supprimer" Command="{Binding DeleteSelectedCommand}"/>
                            <Separator/>
                            <MenuItem Header="Activer la sélection" Command="{Binding EnableBatchCommand}"
                                      Visibility="{Binding HasMultipleSelection, Converter={StaticResource BoolToVisibility}}"/>
                            <MenuItem Header="Désactiver la sélection" Command="{Binding DisableBatchCommand}"
                                      Visibility="{Binding HasMultipleSelection, Converter={StaticResource BoolToVisibility}}"/>
                            <Separator Visibility="{Binding HasMultipleSelection, Converter={StaticResource BoolToVisibility}}"/>
                            <MenuItem Header="Ouvrir l'emplacement" Command="{Binding OpenFileLocationCommand}"/>
                            <MenuItem Header="Copier le chemin" Command="{Binding CopyPathCommand}"/>
                            <MenuItem Header="Calculer le hash" Command="{Binding CalculateHashCommand}"/>
                            <MenuItem Header="Scanner avec l'antivirus" Command="{Binding ScanSelectedCommand}"/>
                            <MenuItem Header="Rechercher sur le Web" Command="{Binding WebSearchCommand}"/>
                            <Separator/>
                            <MenuItem Header="Ouvrir dans Regedit" Command="{Binding OpenInRegeditCommand}"/>
                            <MenuItem Header="Ouvrir Services.msc" Command="{Binding OpenInServicesCommand}"/>
                            <MenuItem Header="Ouvrir Planificateur de tâches" Command="{Binding OpenInTaskSchedulerCommand}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource RowHover}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource RowSelected}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nom" Binding="{Binding DisplayName}" Width="*" MinWidth="150"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="110"/>
                        <DataGridTextColumn Header="Portée" Binding="{Binding Scope}" Width="80"/>
                        <DataGridTextColumn Header="Éditeur" Binding="{Binding Publisher}" Width="150"/>
                        <DataGridTemplateColumn Header="Signature" Width="90"
                                            SortMemberPath="SignatureStatus" CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding SignatureStatus, Converter={StaticResource SignatureToColor}}"
                                            CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding SignatureStatus}" FontSize="11" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Statut" Width="80"
                                            SortMemberPath="Status" CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Status, Converter={StaticResource StatusToColor}}"
                                            CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Status}" FontSize="11" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Risque" Width="70"
                                            SortMemberPath="RiskLevel" CanUserSort="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="16" Height="16"
                                             Fill="{Binding RiskLevel, Converter={StaticResource RiskToColor}}"
                                             ToolTip="{Binding RiskLevel}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" Background="Transparent" Cursor="SizeWE"/>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="{DynamicResource PanelBackground}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="4" Margin="0,8,8,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Détails" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <!-- No Selection -->
                        <StackPanel Visibility="{Binding SelectedEntry, Converter={StaticResource NullToVisibility}}"
                                    HorizontalAlignment="Center" Margin="0,40">
                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="Sélectionnez une entrée pour voir ses détails"
                                       Foreground="{DynamicResource DisabledForeground}" HorizontalAlignment="Center" Margin="0,16,0,0"/>
                        </StackPanel>

                        <!-- Entry Details -->
                        <StackPanel Visibility="{Binding SelectedEntry, Converter={StaticResource NotNullToVisibility}}">
                            <!-- Header with status badge -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding SelectedEntry.DisplayName}"
                                           FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                <Border Grid.Column="1"
                                        Background="{Binding SelectedEntry.RiskLevel, Converter={StaticResource RiskToColor}}"
                                        CornerRadius="4" Padding="8,4" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding SelectedEntry.RiskLevel}"
                                               FontSize="11" Foreground="White"/>
                                </Border>
                            </Grid>

                            <Separator Margin="0,0,0,12"/>

                            <!-- Info Grid -->
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Type:" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEntry.Type}" Margin="0,4" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="1" Text="Portée:" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEntry.Scope}" Margin="0,4"/>

                                <TextBlock Grid.Row="2" Text="Source:" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedEntry.SourcePath}"
                                           Margin="0,4" TextWrapping="Wrap" FontSize="11"/>

                                <TextBlock Grid.Row="3" Text="Cible:" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedEntry.TargetPath}"
                                           Margin="0,4" TextWrapping="Wrap" FontSize="11"/>

                                <TextBlock Grid.Row="4" Text="Éditeur:" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedEntry.Publisher}" Margin="0,4" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="5" Text="Signature:" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedEntry.SignatureStatus}" Margin="0,4"/>

                                <TextBlock Grid.Row="6" Text="Statut:" FontWeight="SemiBold" Margin="0,4"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SelectedEntry.Status}" Margin="0,4"/>

                                <TextBlock Grid.Row="7" Text="Scan AV:" FontWeight="SemiBold" Margin="0,4"
                                           Visibility="{Binding SelectedEntry.MalwareScanResult, Converter={StaticResource NotNullToVisibility}}"/>
                                <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Margin="0,4"
                                            Visibility="{Binding SelectedEntry.MalwareScanResult, Converter={StaticResource NotNullToVisibility}}">
                                    <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#6B7280"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Clean">
                                                        <Setter Property="Background" Value="#10B981"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Malware">
                                                        <Setter Property="Background" Value="#EF4444"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Blocked">
                                                        <Setter Property="Background" Value="#F59E0B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="NotScanned">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Error">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Foreground="White" FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Inconnu"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Clean">
                                                            <Setter Property="Text" Value="Fichier sain"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Malware">
                                                            <Setter Property="Text" Value="Menace détectée!"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Blocked">
                                                            <Setter Property="Text" Value="Bloqué"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="NotScanned">
                                                            <Setter Property="Text" Value="Non scanné"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedEntry.MalwareScanResult}" Value="Error">
                                                            <Setter Property="Text" Value="Erreur"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    <TextBlock Text="{Binding SelectedEntry.LastMalwareScan, StringFormat=' ({0:g})'}"
                                               FontSize="10" Foreground="{DynamicResource DisabledForeground}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Separator Margin="0,12"/>

                            <!-- Command Line -->
                            <TextBlock Text="Ligne de commande:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="{DynamicResource RowAlternate}" CornerRadius="4" Padding="8">
                                <TextBox Text="{Binding SelectedEntry.CommandLineRaw, Mode=OneWay}"
                                         IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                         Background="Transparent" BorderThickness="0"
                                         FontFamily="Consolas"/>
                            </Border>

                            <!-- Notes -->
                            <StackPanel Visibility="{Binding SelectedEntry.Notes, Converter={StaticResource NotNullToVisibility}}"
                                        Margin="0,12,0,0">
                                <TextBlock Text="Notes:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <Border Background="{DynamicResource NoteBackgroundBrush}" CornerRadius="4" Padding="8">
                                    <TextBlock Text="{Binding SelectedEntry.Notes}" TextWrapping="Wrap"
                                               Foreground="{DynamicResource NoteForegroundBrush}"/>
                                </Border>
                            </StackPanel>

                            <!-- Knowledge Base Info -->
                            <StackPanel Visibility="{Binding KnowledgeInfo, Converter={StaticResource NotNullToVisibility}}"
                                        Margin="0,16,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="&#xE82D;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                               Foreground="{DynamicResource AccentBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Informations" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{DynamicResource AccentBrush}"/>
                                </StackPanel>

                                <!-- Safety Level Badge -->
                                <Border CornerRadius="4" Padding="8" Margin="0,0,0,8"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="Niveau de sécurité:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                            <Border CornerRadius="3" Padding="8,2" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Critical">
                                                                <Setter Property="Background" Value="#DC2626"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Important">
                                                                <Setter Property="Background" Value="#F59E0B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Safe">
                                                                <Setter Property="Background" Value="#10B981"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="RecommendedDisable">
                                                                <Setter Property="Background" Value="#3B82F6"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="ShouldRemove">
                                                                <Setter Property="Background" Value="#7C3AED"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Foreground="White" FontSize="11">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Inconnu"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Critical">
                                                                    <Setter Property="Text" Value="Critique - Ne pas désactiver"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Important">
                                                                    <Setter Property="Text" Value="Important"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="Safe">
                                                                    <Setter Property="Text" Value="Peut être désactivé"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="RecommendedDisable">
                                                                    <Setter Property="Text" Value="Désactivation recommandée"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding KnowledgeInfo.SafetyLevel}" Value="ShouldRemove">
                                                                    <Setter Property="Text" Value="À supprimer"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding KnowledgeInfo.Category}" FontSize="11"
                                                   Foreground="{DynamicResource DisabledForeground}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Description -->
                                <TextBlock Text="{Binding KnowledgeInfo.ShortDescription}" TextWrapping="Wrap"
                                           Margin="0,0,0,8"/>

                                <!-- Full Description (Expander) -->
                                <Expander Header="Description détaillée" IsExpanded="False" Margin="0,0,0,8"
                                          Visibility="{Binding KnowledgeInfo.FullDescription, Converter={StaticResource NotNullToVisibility}}">
                                    <TextBlock Text="{Binding KnowledgeInfo.FullDescription}" TextWrapping="Wrap"
                                               Margin="0,8,0,0" Foreground="{DynamicResource WindowForeground}"/>
                                </Expander>

                                <!-- Impact if disabled -->
                                <Expander Header="Impact si désactivé" IsExpanded="False" Margin="0,0,0,8"
                                          Visibility="{Binding KnowledgeInfo.DisableImpact, Converter={StaticResource NotNullToVisibility}}">
                                    <Border Background="{DynamicResource NoteBackgroundBrush}" CornerRadius="4" Padding="8" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding KnowledgeInfo.DisableImpact}" TextWrapping="Wrap"
                                                   Foreground="{DynamicResource NoteForegroundBrush}"/>
                                    </Border>
                                </Expander>

                                <!-- Performance Impact -->
                                <Expander Header="Impact sur les performances" IsExpanded="False" Margin="0,0,0,8"
                                          Visibility="{Binding KnowledgeInfo.PerformanceImpact, Converter={StaticResource NotNullToVisibility}}">
                                    <TextBlock Text="{Binding KnowledgeInfo.PerformanceImpact}" TextWrapping="Wrap"
                                               Margin="0,8,0,0" Foreground="{DynamicResource WindowForeground}"/>
                                </Expander>

                                <!-- Recommendation -->
                                <Border Background="{DynamicResource AccentBrush}" CornerRadius="4" Padding="8" Margin="0,4,0,0"
                                        Opacity="0.9"
                                        Visibility="{Binding KnowledgeInfo.Recommendation, Converter={StaticResource NotNullToVisibility}}">
                                    <StackPanel>
                                        <TextBlock Text="Recommandation" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding KnowledgeInfo.Recommendation}" TextWrapping="Wrap" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- No Knowledge Info -->
                            <Border Visibility="{Binding KnowledgeInfo, Converter={StaticResource NullToVisibility}}"
                                    Background="{DynamicResource RowAlternate}" CornerRadius="4" Padding="12" Margin="0,16,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                               HorizontalAlignment="Center" Opacity="0.5" Margin="0,0,0,8"/>
                                    <TextBlock Text="Aucune information disponible" TextWrapping="Wrap"
                                               HorizontalAlignment="Center" Foreground="{DynamicResource DisabledForeground}"/>
                                    <TextBlock Text="dans la base de connaissances" TextWrapping="Wrap" FontSize="11"
                                               HorizontalAlignment="Center" Foreground="{DynamicResource DisabledForeground}"/>
                                </StackPanel>
                            </Border>

                            <!-- File Info -->
                            <Expander Header="Informations fichier" Margin="0,12,0,0" IsExpanded="False">
                                <StackPanel Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="Version:" Margin="0,2"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEntry.FileVersion}" Margin="0,2"/>

                                        <TextBlock Grid.Row="1" Text="Produit:" Margin="0,2"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEntry.ProductName}" Margin="0,2"/>

                                        <TextBlock Grid.Row="2" Text="Taille:" Margin="0,2"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedEntry.FileSize, StringFormat={}{0:N0} octets}" Margin="0,2"/>

                                        <TextBlock Grid.Row="3" Text="Modifié:" Margin="0,2"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedEntry.LastModified, StringFormat=g}" Margin="0,2"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>

                            <Separator Margin="0,16"/>

                            <!-- Action Buttons -->
                            <WrapPanel HorizontalAlignment="Center">
                                <Button Command="{Binding OpenFileLocationCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}" Margin="4"
                                        AutomationProperties.Name="Ouvrir l'emplacement du fichier">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Ouvrir" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding CopyPathCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}" Margin="4"
                                        AutomationProperties.Name="Copier le chemin">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Copier" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding WebSearchCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource NeutralBrush}" Margin="4"
                                        AutomationProperties.Name="Rechercher sur le web">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Web" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding CalculateHashCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource InfoBrush}" Margin="4"
                                        ToolTip="Calculer le hash SHA-256 du fichier"
                                        AutomationProperties.Name="Calculer le hash SHA-256">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Hash" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ScanSelectedCommand}"
                                        Style="{StaticResource ToolbarButton}" Background="{DynamicResource SuccessBrush}" Margin="4"
                                        ToolTip="Scanner le fichier avec l'antivirus (AMSI)"
                                        AutomationProperties.Name="Scanner avec l'antivirus">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Scan AV" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Admin status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}, ConverterParameter=Green|Orange}"
                            CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                        <TextBlock Text="{Binding AdminStatusText}" FontSize="11" Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Status message -->
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" VerticalAlignment="Center"
                           AutomationProperties.LiveSetting="Polite"
                           AutomationProperties.Name="Message de statut"/>

                <!-- Loading indicator -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="&#xE712;" FontFamily="Segoe MDL2 Assets" Margin="0,0,4,0" Foreground="{DynamicResource DisabledForeground}"/>
                    <TextBlock Text="Chargement..." Foreground="{DynamicResource DisabledForeground}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5" Background="{DynamicResource OverlayBackground}"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource AccentForeground}"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                <TextBlock Text="{Binding ProgressText}" Foreground="{DynamicResource HeaderSecondaryForeground}" FontSize="12"
                           HorizontalAlignment="Center" Margin="0,8,0,0"
                           Visibility="{Binding ProgressText, Converter={StaticResource NotNullToVisibility}}"/>
                <Button Command="{Binding CancelOperationCommand}"
                        Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibility}}"
                        Margin="0,16,0,0" Padding="16,8"
                        Background="{DynamicResource ErrorBrush}" Foreground="{DynamicResource AccentForeground}" BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Annuler" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
