<Window x:Class="BootSentry.UI.Views.HistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BootSentry.UI.ViewModels"
        xmlns:res="clr-namespace:BootSentry.UI.Resources"
        mc:Ignorable="d"
        Title="{res:Localize HistoryWindowTitle}"
        Height="550" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource WindowBackground}"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding ElementName=CloseButton}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{res:Localize HistoryTitle}"
                       FontSize="20" FontWeight="Bold"
                       Foreground="{DynamicResource WindowForeground}"/>
            <TextBlock Text="{res:Localize HistorySubtitle}"
                       Foreground="{DynamicResource DisabledForeground}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Transaction List -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Transactions}"
                  SelectedItem="{Binding SelectedTransaction}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="{DynamicResource PanelBackground}"
                  Foreground="{DynamicResource WindowForeground}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  BorderThickness="1"
                  RowBackground="{DynamicResource PanelBackground}"
                  AlternatingRowBackground="{DynamicResource RowAlternate}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{res:Localize HistoryDate}" Binding="{Binding Timestamp, StringFormat='{}{0:g}'}" Width="130"/>
                <DataGridTextColumn Header="{res:Localize HistoryAction}" Binding="{Binding ActionType}" Width="80"/>
                <DataGridTextColumn Header="{res:Localize HistoryEntry}" Binding="{Binding EntryDisplayName}" Width="*"/>
                <DataGridTextColumn Header="{res:Localize HistoryType}" Binding="{Binding EntryType}" Width="100"/>
                <DataGridTextColumn Header="{res:Localize HistoryUser}" Binding="{Binding User}" Width="100"/>
                <DataGridTextColumn Header="{res:Localize HistoryStatus}" Binding="{Binding StatusText}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Empty State -->
        <StackPanel Grid.Row="1"
                    Visibility="{Binding HasNoTransactions, Converter={StaticResource BoolToVisibility}}"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                       HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}" Opacity="0.4"/>
            <TextBlock Text="{res:Localize HistoryEmpty}" FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource WindowForeground}" HorizontalAlignment="Center" Margin="0,16,0,4"/>
            <TextBlock Text="{res:Localize HistoryEmptyHint}" FontSize="12"
                       Foreground="{DynamicResource MutedForeground}" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Selected Transaction Details -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,12,0,0"
                Padding="12"
                Visibility="{Binding SelectedTransaction, Converter={StaticResource NotNullToVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource HeaderTextStyle}"
                               Text="{Binding SelectedTransaction.EntryDisplayName}"/>
                    <TextBlock Foreground="{DynamicResource DisabledForeground}"
                               Margin="0,4,0,0">
                        <Run Text="{res:Localize DetailSource}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding SelectedTransaction.SourcePath, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource ToolbarButton}"
                        Command="{Binding RollbackSelectedCommand}"
                        IsEnabled="{Binding SelectedTransaction.CanRestore}"
                        Content="{res:Localize ActionRestore}"/>
            </Grid>
        </Border>

        <!-- Footer with Actions and Status -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding StatusMessage}"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource DisabledForeground}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="{res:Localize HistoryPurgeOld}"
                        Command="{Binding PurgeOldTransactionsCommand}"
                        Padding="12,8"
                        Margin="4,0"
                        Background="{DynamicResource ControlBackground}"
                        Foreground="{DynamicResource ControlForeground}"
                        BorderBrush="{DynamicResource BorderBrush}"/>
                <Button Content="{res:Localize MenuRefresh}"
                        Command="{Binding LoadTransactionsCommand}"
                        Padding="12,8"
                        Margin="4,0"
                        Background="{DynamicResource ControlBackground}"
                        Foreground="{DynamicResource ControlForeground}"
                        BorderBrush="{DynamicResource BorderBrush}"/>
                <Button x:Name="CloseButton"
                        Content="{res:Localize Close}"
                        Click="CloseButton_Click"
                        IsDefault="True"
                        Padding="12,8"
                        Margin="4,0,0,0"
                        Background="{DynamicResource ControlBackground}"
                        Foreground="{DynamicResource ControlForeground}"
                        BorderBrush="{DynamicResource BorderBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4"
                Background="{DynamicResource OverlayBackground}"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="{res:Localize Loading}"
                           Foreground="{DynamicResource AccentForeground}"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
