<Window x:Class="BootSentry.UI.Views.OnboardingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:BootSentry.UI.Resources"
        Title="{res:Localize OnboardingWindowTitle}"
        SizeToContent="WidthAndHeight"
        MaxWidth="600" MaxHeight="700"
        MinWidth="450" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FocusManager.FocusedElement="{Binding ElementName=NextButton}">

    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="2"
            CornerRadius="8"
            MaxWidth="600" MaxHeight="700">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="32" MinWidth="450">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo - Draggable area -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center"
                        MouseLeftButtonDown="Header_MouseLeftButtonDown"
                        Background="Transparent"
                        Cursor="SizeAll">
                <TextBlock Text="BootSentry"
                           FontSize="32" FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{res:Localize AppSubtitle}"
                           FontSize="14"
                           Foreground="{DynamicResource DisabledForeground}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
                <!-- Step Indicator -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                    <Ellipse x:Name="Step1Indicator" Width="10" Height="10"
                             Fill="{DynamicResource AccentBrush}" Margin="4,0"/>
                    <Ellipse x:Name="Step2Indicator" Width="10" Height="10"
                             Fill="{DynamicResource BorderBrush}" Margin="4,0"/>
                    <Ellipse x:Name="Step3Indicator" Width="10" Height="10"
                             Fill="{DynamicResource BorderBrush}" Margin="4,0"/>
                </StackPanel>
                <TextBlock x:Name="StepText" Text="{res:Localize OnboardingStep1of3}"
                           FontSize="11"
                           Foreground="{DynamicResource DisabledForeground}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Content based on current step -->
            <Grid Grid.Row="1" Margin="0,32">
                <!-- Step 1: Welcome -->
                <StackPanel x:Name="Step1Panel" Visibility="Visible">
                    <TextBlock Text="{res:Localize OnboardingWelcome}"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource WindowForeground}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{res:Localize OnboardingDescription}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{DynamicResource WindowForeground}"
                               Margin="0,16,0,0"/>
                    <TextBlock Text="{res:Localize OnboardingDesc2}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{DynamicResource DisabledForeground}"
                               Margin="0,16,0,0"/>
                </StackPanel>

                <!-- Step 2: Mode Selection -->
                <StackPanel x:Name="Step2Panel" Visibility="Collapsed">
                    <TextBlock Text="{res:Localize OnboardingModeQuestion}"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource WindowForeground}"
                               HorizontalAlignment="Center"/>

                    <RadioButton x:Name="StandardModeRadio"
                                 GroupName="Mode"
                                 IsChecked="True"
                                 Margin="0,24,0,0"
                                 AutomationProperties.Name="{res:Localize OnboardingModePublic}"
                                 AutomationProperties.HelpText="{res:Localize OnboardingModePublicDesc}">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="Border"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,4"
                                        Cursor="Hand">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="20" Height="20"
                                                     Stroke="{DynamicResource AccentBrush}"
                                                     StrokeThickness="2"
                                                     Fill="{TemplateBinding Tag}"/>
                                            <TextBlock Text="{res:Localize OnboardingModePublic}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource WindowForeground}"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="{res:Localize OnboardingModePublicDesc}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource DisabledForeground}"
                                                   Margin="28,8,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Tag" Value="{DynamicResource AccentBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter Property="Tag" Value="Transparent"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>

                    <RadioButton x:Name="ExpertModeRadio"
                                 GroupName="Mode"
                                 Margin="0,8,0,0"
                                 AutomationProperties.Name="{res:Localize OnboardingModeExpert}"
                                 AutomationProperties.HelpText="{res:Localize OnboardingModeExpertDesc}">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="Border"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,4"
                                        Cursor="Hand">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="20" Height="20"
                                                     Stroke="{DynamicResource AccentBrush}"
                                                     StrokeThickness="2"
                                                     Fill="{TemplateBinding Tag}"/>
                                            <TextBlock Text="{res:Localize OnboardingModeExpert}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource WindowForeground}"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="{res:Localize OnboardingModeExpertDesc}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource DisabledForeground}"
                                                   Margin="28,8,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Tag" Value="{DynamicResource AccentBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter Property="Tag" Value="Transparent"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                </StackPanel>

                <!-- Step 3: Keyboard Shortcuts -->
                <StackPanel x:Name="Step3Panel" Visibility="Collapsed">
                    <TextBlock Text="{res:Localize OnboardingShortcutsTitle}"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource WindowForeground}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{res:Localize OnboardingShortcutsDesc}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{DynamicResource DisabledForeground}"
                               Margin="0,8,0,16"/>

                    <!-- Shortcuts Grid -->
                    <Border Background="{DynamicResource PanelBackground}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- F5 -->
                            <Border Grid.Row="0" Grid.Column="0" Background="{DynamicResource AccentBrush}"
                                    CornerRadius="4" Padding="8,4" Margin="0,4">
                                <TextBlock Text="F5" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{res:Localize ShortcutRefresh}"
                                       Foreground="{DynamicResource WindowForeground}"
                                       VerticalAlignment="Center" Margin="12,4,0,4"/>

                            <!-- Ctrl+F -->
                            <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource AccentBrush}"
                                    CornerRadius="4" Padding="8,4" Margin="0,4">
                                <TextBlock Text="Ctrl+F" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{res:Localize ShortcutSearch}"
                                       Foreground="{DynamicResource WindowForeground}"
                                       VerticalAlignment="Center" Margin="12,4,0,4"/>

                            <!-- Delete -->
                            <Border Grid.Row="2" Grid.Column="0" Background="{DynamicResource AccentBrush}"
                                    CornerRadius="4" Padding="8,4" Margin="0,4">
                                <TextBlock Text="Suppr" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{res:Localize ShortcutDelete}"
                                       Foreground="{DynamicResource WindowForeground}"
                                       VerticalAlignment="Center" Margin="12,4,0,4"/>

                            <!-- Ctrl+Z -->
                            <Border Grid.Row="3" Grid.Column="0" Background="{DynamicResource AccentBrush}"
                                    CornerRadius="4" Padding="8,4" Margin="0,4">
                                <TextBlock Text="Ctrl+Z" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{res:Localize ShortcutUndo}"
                                       Foreground="{DynamicResource WindowForeground}"
                                       VerticalAlignment="Center" Margin="12,4,0,4"/>

                            <!-- F1 -->
                            <Border Grid.Row="4" Grid.Column="0" Background="{DynamicResource AccentBrush}"
                                    CornerRadius="4" Padding="8,4" Margin="0,4">
                                <TextBlock Text="F1" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{res:Localize ShortcutHelp}"
                                       Foreground="{DynamicResource WindowForeground}"
                                       VerticalAlignment="Center" Margin="12,4,0,4"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Footer with Navigation -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <CheckBox x:Name="DontShowAgainCheckBox"
                          Content="{res:Localize OnboardingDontShowAgain}"
                          Foreground="{DynamicResource DisabledForeground}"
                          VerticalAlignment="Center"/>

                <Button x:Name="PreviousButton"
                        Grid.Column="1"
                        Content="{res:Localize OnboardingPrevious}"
                        Click="PreviousButton_Click"
                        Visibility="Collapsed"
                        Padding="16,8"
                        Margin="8,0"
                        Background="{DynamicResource ControlBackground}"
                        Foreground="{DynamicResource ControlForeground}"
                        BorderBrush="{DynamicResource BorderBrush}"/>

                <Button x:Name="NextButton"
                        Grid.Column="2"
                        Content="{res:Localize OnboardingNext}"
                        Click="NextButton_Click"
                        Padding="24,8"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource AccentForeground}"
                        BorderThickness="0"/>
            </Grid>
        </Grid>
        </ScrollViewer>
    </Border>
</Window>
