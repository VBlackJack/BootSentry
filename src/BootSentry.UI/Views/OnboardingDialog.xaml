<Window x:Class="BootSentry.UI.Views.OnboardingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenue - BootSentry"
        Height="450" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="2"
            CornerRadius="8">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <TextBlock Text="BootSentry"
                           FontSize="32" FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Gestionnaire de demarrage Windows"
                           FontSize="14"
                           Foreground="{DynamicResource DisabledForeground}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Content based on current step -->
            <Grid Grid.Row="1" Margin="0,32">
                <!-- Step 1: Welcome -->
                <StackPanel x:Name="Step1Panel" Visibility="Visible">
                    <TextBlock Text="Bienvenue !"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource WindowForeground}"
                               HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{DynamicResource WindowForeground}"
                               Margin="0,16,0,0">
                        BootSentry vous permet de gerer facilement les programmes qui demarrent automatiquement avec Windows.
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{DynamicResource DisabledForeground}"
                               Margin="0,16,0,0">
                        Vous pouvez desactiver, reactiver ou supprimer les entrees de demarrage en toute securite grace au systeme de backup integre.
                    </TextBlock>
                </StackPanel>

                <!-- Step 2: Mode Selection -->
                <StackPanel x:Name="Step2Panel" Visibility="Collapsed">
                    <TextBlock Text="Choisissez votre mode"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource WindowForeground}"
                               HorizontalAlignment="Center"/>

                    <RadioButton x:Name="StandardModeRadio"
                                 GroupName="Mode"
                                 IsChecked="True"
                                 Margin="0,24,0,0">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="Border"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,4"
                                        Cursor="Hand">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="20" Height="20"
                                                     Stroke="{DynamicResource AccentBrush}"
                                                     StrokeThickness="2"
                                                     Fill="{TemplateBinding Tag}"/>
                                            <TextBlock Text="Mode Standard (Recommande)"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource WindowForeground}"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="Cache les entrees systeme Microsoft et les elements critiques. Ideal pour la plupart des utilisateurs."
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource DisabledForeground}"
                                                   Margin="28,8,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Tag" Value="{DynamicResource AccentBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter Property="Tag" Value="Transparent"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>

                    <RadioButton x:Name="ExpertModeRadio"
                                 GroupName="Mode"
                                 Margin="0,8,0,0">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="Border"
                                        Background="{DynamicResource PanelBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,4"
                                        Cursor="Hand">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="20" Height="20"
                                                     Stroke="{DynamicResource AccentBrush}"
                                                     StrokeThickness="2"
                                                     Fill="{TemplateBinding Tag}"/>
                                            <TextBlock Text="Mode Expert"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource WindowForeground}"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="Affiche toutes les entrees y compris les services systeme et les pilotes. Pour utilisateurs avances uniquement."
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource DisabledForeground}"
                                                   Margin="28,8,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Tag" Value="{DynamicResource AccentBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter Property="Tag" Value="Transparent"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                </StackPanel>
            </Grid>

            <!-- Footer with Navigation -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <CheckBox x:Name="DontShowAgainCheckBox"
                          Content="Ne plus afficher"
                          Foreground="{DynamicResource DisabledForeground}"
                          VerticalAlignment="Center"/>

                <Button x:Name="PreviousButton"
                        Grid.Column="1"
                        Content="Precedent"
                        Click="PreviousButton_Click"
                        Visibility="Collapsed"
                        Padding="16,8"
                        Margin="8,0"
                        Background="{DynamicResource ControlBackground}"
                        Foreground="{DynamicResource ControlForeground}"
                        BorderBrush="{DynamicResource BorderBrush}"/>

                <Button x:Name="NextButton"
                        Grid.Column="2"
                        Content="Suivant"
                        Click="NextButton_Click"
                        Padding="24,8"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource AccentForeground}"
                        BorderThickness="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
