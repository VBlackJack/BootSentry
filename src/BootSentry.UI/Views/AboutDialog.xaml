<Window x:Class="BootSentry.UI.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:BootSentry.UI.Resources"
        Title="{res:Localize AboutTitle}"
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="2"
            CornerRadius="8">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header - Draggable area -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,16"
                        MouseLeftButtonDown="Header_MouseLeftButtonDown"
                        Background="Transparent"
                        Cursor="SizeAll">
                <TextBlock Text="BootSentry"
                           FontSize="32" FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="VersionText"
                           FontSize="14"
                           Foreground="{DynamicResource DisabledForeground}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="{res:Localize AppSubtitle}"
                               FontSize="14"
                               Foreground="{DynamicResource WindowForeground}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="{res:Localize AboutDescription}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{DynamicResource WindowForeground}"
                               Margin="0,0,0,16"/>

                    <Separator Margin="0,8"/>

                    <!-- System Info -->
                    <Grid Margin="0,16,0,0" TextElement.Foreground="{DynamicResource WindowForeground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{res:Localize AboutAuthor}" FontWeight="SemiBold" Margin="0,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Julien Bombled" Margin="8,2"/>

                        <TextBlock Grid.Row="1" Text="{res:Localize AboutLicense}" FontWeight="SemiBold" Margin="0,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Apache License 2.0" Margin="8,2"/>

                        <TextBlock Grid.Row="2" Text=".NET:" FontWeight="SemiBold" Margin="0,2"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DotNetVersionText" Margin="8,2"/>

                        <TextBlock Grid.Row="3" Text="OS:" FontWeight="SemiBold" Margin="0,2"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="OsVersionText" Margin="8,2"/>
                    </Grid>

                    <Separator Margin="0,16,0,8"/>

                    <!-- Links -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
                        <Button x:Name="GitHubButton"
                                Click="GitHubButton_Click"
                                Padding="12,6" Margin="4"
                                Background="Transparent"
                                BorderBrush="{DynamicResource AccentBrush}"
                                Foreground="{DynamicResource AccentBrush}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="GitHub" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="LicenseButton"
                                Click="LicenseButton_Click"
                                Padding="12,6" Margin="4"
                                Background="Transparent"
                                BorderBrush="{DynamicResource AccentBrush}"
                                Foreground="{DynamicResource AccentBrush}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="{res:Localize AboutLicenseBtn}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Button Grid.Row="2" Content="{res:Localize Close}"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Center"
                    Padding="24,8" Margin="0,16,0,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="{DynamicResource AccentForeground}"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>
    </Border>
</Window>
