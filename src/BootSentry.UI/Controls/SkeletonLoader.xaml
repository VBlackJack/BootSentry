<UserControl x:Class="BootSentry.UI.Controls.SkeletonLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{DynamicResource PanelBackground}" CornerRadius="4" Padding="16">
        <StackPanel>
            <!-- Skeleton Rows -->
            <ItemsControl x:Name="SkeletonRows">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="36" Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <!-- Dot placeholder -->
                            <Ellipse Grid.Column="0" Width="16" Height="16"
                                     Fill="{DynamicResource BorderBrush}" Opacity="0.6"/>

                            <!-- Name placeholder -->
                            <Border Grid.Column="1" Height="14" CornerRadius="4"
                                    Background="{DynamicResource BorderBrush}" Margin="12,0"
                                    HorizontalAlignment="Left" Width="{Binding}" Opacity="0.6"/>

                            <!-- Type placeholder -->
                            <Border Grid.Column="2" Height="12" CornerRadius="4"
                                    Background="{DynamicResource BorderBrush}"
                                    HorizontalAlignment="Left" Width="60" Opacity="0.5"/>

                            <!-- Status placeholder -->
                            <Border Grid.Column="3" Height="12" CornerRadius="4"
                                    Background="{DynamicResource BorderBrush}"
                                    HorizontalAlignment="Left" Width="50" Opacity="0.5"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
